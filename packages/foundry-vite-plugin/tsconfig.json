{
  "extends": "@rpgmadesimple/tsconfig/base.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "vite.config.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true
  }
}
